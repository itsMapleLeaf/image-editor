{
  "private": true,
  "sideEffects": false,
  "scripts": {
    "dev": "run-p --print-label --race dev:*",
    "dev:remix": "remix dev",
    "dev:tailwind": "pnpm run tailwind --watch",
    "build": "pnpm run tailwind --minify && remix build",
    "lint": "eslint --ext js,ts,tsx .",
    "lint-fix": "pnpm lint -- --fix",
    "format": "prettier --write .",
    "test": "vitest",
    "coverage": "vitest --run --coverage",
    "typecheck": "tsc --noEmit",
    "tailwind": "tailwindcss -o app/tailwind.css"
  },
  "dependencies": {
    "@itsmapleleaf/configs": "^1.1.3",
    "@remix-run/node": "^1.6.0",
    "@remix-run/react": "^1.6.0",
    "@remix-run/vercel": "^1.6.0",
    "@vercel/node": "^2.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.6.0",
    "@remix-run/eslint-config": "^1.6.0",
    "@remix-run/serve": "^1.6.0",
    "@rushstack/eslint-patch": "^1.1.3",
    "@types/eslint": "^8.4.3",
    "@types/node": "^17.0.43",
    "@types/react": "^18.0.12",
    "@types/react-dom": "^18.0.5",
    "autoprefixer": "^10.4.7",
    "c8": "^7.11.3",
    "eslint": "^8.17.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.14",
    "prettier": "^2.7.0",
    "tailwindcss": "^3.1.3",
    "typescript": "^4.7.3",
    "vitest": "^0.15.0"
  },
  "engines": {
    "node": "^16"
  },
  "prettier": "@itsmapleleaf/configs/prettier"
}
